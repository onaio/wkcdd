
{% extends 'base.jinja2' %}
{% from 'macros/value_or_default.jinja2' import value_or_default %}
{% block title %}{{ Projects }} {% endblock %}
{% block page_title %}
  <h3 class="page-title">
    All Counties
    <small></small>
  </h3>
{% endblock %}
{% block breadcrumbs %}
  <li>
      {% trans %}County Indicators{% endtrans %}
  </li>

{% endblock %}
{% block content %}
<div class="row">
<div class="col-md-12">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet">
      <div class="portlet-title">
         <div class="caption"><i class="icon-tasks"></i>{% trans %}Counties{% endtrans %}</div>
      </div>
      <div class="portlet-body">
         <div class="">
            <table class="table table-hover table-responsive">
               {% include 'impact_indicator_table_head.jinja2' %}
               <tbody>
               <tr>
                  <td>
                    {% trans %} Total Summary {% endtrans %}
                  </td>
                  {% for indicator in impact_indicator_mapping %}
                    <td>
                        {{ impact_indicators['total_indicator_summary'][indicator.key]|default('-') }}
                    </td>
                  {% endfor %}
               </tr>
               {% for county in counties %}
                  <tr>
                     <td><a href="{{ request.route_url('counties', traverse=county.id) }}">{{ county.name | capitalize }}</a></td>
                     {% for indicator in impact_indicator_mapping %}
                        <td>
                         {{  impact_indicators['aggregated_impact_indicators'][county.id]['summary'][indicator.key]|default('-') }}
                        </td>
                     {% endfor %}
                  </tr>
               {% endfor %}
               </tbody>
            </table>
         </div>
      </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
</div>
{{response}}
</div>
{% endblock content %}
