{% extends 'base.jinja2' %}
{% block title %}{% trans %} County Imapact Indicators {% endtrans %}{% endblock %}

{% block page_title %}
  <h3 class="page-title">
    {{ self.title() }}
    <small></small>
  </h3>
{% endblock %}

{% block breadcrumbs %}
  <li>{{ self.title() }}</li>
  <li><a href="#"> </a></li>
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <!-- BEGIN SAMPLE TABLE PORTLET-->
      <div class="portlet">
        <div class="portlet-title">
          <div class="caption">
            <i class="icon-tasks"></i>
            {% trans %}Sub-Counties{% endtrans %}
          </div>
        </div>
        <div class="portlet-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th>{% trans %}Counties{% endtrans %}</th>
                {% for indicator in indicators %}
                  <th>{{ indicator.label }}</th>
                {% endfor %}
              </tr>
              </thead>

              <tbody>
              {% for row in rows %}
                <tr>
                  <td>
                    <a href="">{{ row.location.pretty }}</a>
                  </td>
                  {% for indicator in indicators %}
                    <td>{{ row.indicators[indicator.key] }}</td>
                  {% endfor %}
                </tr>
              {% endfor %}

              <tr class="bold">
                <td>
                  {% trans %} Total Summary {% endtrans %}
                </td>
                {% for indicator in indicators %}
                  <td>{{ summary_row[indicator.key] }}</td>
                {% endfor %}
              </tr>

              </tbody>
            </table>
          </div>
        </div>
      </div>
      <!-- END SAMPLE TABLE PORTLET-->
    </div>
  </div>
{% endblock %}

{% block jquery_ready %}
  {{ super() }}
{% endblock %}