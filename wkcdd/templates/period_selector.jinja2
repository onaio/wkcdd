{% set months = {1:'January', 2:'February', 3:'March', 4:'April', 5:'May', 6:'June', 7:'July', 8:'August', 9:'September', 10:'October', 11:'November', 12:'December'}%}
<div class="form-group">
   <label>Select Report Period: </label>
   <select name="month_or_quarter" class="form-control input-small select2me">
      <option value="">{% trans %}Month/Quarter{% endtrans %}</option>
      {% if quarters %}
         {% for quarter in quarters|sort %}
            <option value="{{ quarter }}"
               {% if month_or_quarter == '{}'.format(quarter) %}
                  selected
               {% endif %} 
            >
               {{ quarter | replace("q_", "Quarter ") }}
         {% endfor %}
      {% endif %}
      {% if months_present %}
         <option value="">-------</option>
         {% for key, month in months.iteritems() if key in months_present %}
            <option value="{{loop.index}}"
               {% if month_or_quarter == loop.index | string %}
                  selected
               {% endif %}
            >
               {% trans %}{{month}}{% endtrans %}
            </option>
         {% endfor %}
      {% endif %}
   </select>
   <select name="period" class="form-control input-small select2me">
      <option value="">{% trans %} Year {% endtrans %}</option>
      {% if years %}
         {% for year in years|sort %}
            <option value="{{year}}"
               {% if period == year %}
                  selected
               {% endif %}
            >
               {{ year | replace("_", " to 20") | replace("-", " to 20") }}
            </option>
         {% endfor %}
      {% endif %}
   </select>
</div>